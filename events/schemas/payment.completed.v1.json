{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://caricash.bb/schemas/payment.completed.v1.json",
  "title": "Payment Completed Event",
  "description": "Event published when a payment completes successfully",
  "type": "object",
  "required": [
    "paymentId",
    "correlationId",
    "totalAmount",
    "currencyCode"
  ],
  "properties": {
    "paymentId": {
      "type": "string",
      "format": "uuid"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "totalAmount": {
      "type": "string",
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "currencyCode": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    }
  }
}
